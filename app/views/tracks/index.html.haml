= will_paginate @tracks

%table
  %tr
    %th Title
    %th Artist
    %th Album
    %th Track #
  - @tracks.each do |track|
    %tr{:class => cycle('normal', 'alternate')}
      %td
        = track.title
        = link_to "play", "/tracks/play/#{track.id}"
        &nbsp;
        = link_to "play album", "/albums/play/#{track.album.id}" if track.album
      %td= track.artist.title if track.artist
      %td= track.album.title if track.album
      %td= track.track_number